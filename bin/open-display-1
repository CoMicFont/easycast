#!/bin/sh
export DISPLAY=":0"
sed -i 's/"exited_cleanly":false/"exited_cleanly":true/' ~/.config/chromium/'Local State'
sed -i 's/"exited_cleanly":false/"exited_cleanly":true/; s/"exit_type":"[^"]\+"/"exit_type":"Normal"/' ~/.config/chromium/Default/Preferences
chromium-browser --incognito --disk-cache-size=104857600 --kiosk --no-default-browser-check --no-first-run --disable-infobars --disable-session-crashed-bubble http://172.16.19.1/display/1
